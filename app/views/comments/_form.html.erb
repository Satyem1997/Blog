
<%= simple_form_for([@post, @comment || @post.comments.build], remote: true) do |f| %>
<div class="field">
  <div class="control">
    <%= f.input :comment, input_html: { class: 'textarea' }  %>
  </div>
</div>
<%= f.button :submit, 'Leave a reply', class: "button is-primary" %>
<% end %>



  



