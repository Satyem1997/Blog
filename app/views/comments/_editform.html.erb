<%= simple_form_for [post, comment], remote: true do |f| %>
    <div>
      <%= f.text_field :comment, class: 'form-control commentbox', autofocus: true, :id => 'commentbox' %>
    </div>

    <div style="padding-top:20px;">
       <%= f.submit "update comment",class: 'btn btn-primary' %>

    </div>
    <% end %>




